				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
			<tags>
				<li>RE_AllianceArmoury</li>
				<li>RE_AllianceNavyGearLight</li>
				<li>RE_Apparel_LightAllianceArmor</li>
			</tags>
